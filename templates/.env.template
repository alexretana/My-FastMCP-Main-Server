# MCP Proxy Server Environment Variables
# Copy this file to .env and fill in your values

# Authentication
MCP_PROXY_JWT_SECRET=your-secure-jwt-secret-here

# API Keys
WEATHER_API_KEY=your-weather-api-key
GITHUB_TOKEN=your-github-token
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# External Services
EXTERNAL_API_KEY=your-external-api-key
EXTERNAL_MCP_URL=http://external-mcp:8080/sse

# Filesystem paths (for filesystem MCP server)
MCP_FILESYSTEM_ROOT=/path/to/allowed/directory
GIT_REPO_PATH=/path/to/repository

# Monitoring
GRAFANA_PASSWORD=secure-grafana-password
PROMETHEUS_TOKEN=your-prometheus-token

# Docker-specific
DATABASE_MCP_URL=http://database-mcp:8080

# Development
DEBUG=false
LOG_LEVEL=INFO