{
  "_comment": "Cursor configuration for MCP Proxy Server",
  "_note": "Add this configuration to your Cursor MCP settings",

  "servers": {
    "mcp-proxy-uv": {
      "command": "mcp-proxy",
      "args": ["run", "--config", "/path/to/your/mcp-proxy.json"],
      "env": {
        "MCP_PROXY_JWT_SECRET": "your-jwt-secret",
        "MCP_FILESYSTEM_ROOT": "/path/to/allowed/directory",
        "GIT_REPO_PATH": "/path/to/repository"
      }
    },

    "mcp-proxy-uvx": {
      "command": "uvx",
      "args": ["run", "mcp-proxy-server", "run", "--config", "./mcp-proxy.json"],
      "env": {
        "MCP_PROXY_JWT_SECRET": "your-jwt-secret",
        "WEATHER_API_KEY": "your-weather-api-key"
      }
    }
  }
}