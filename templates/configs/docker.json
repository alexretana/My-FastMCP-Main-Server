{
  "_comment": "MCP Proxy Server configuration for Docker deployment",
  "_note": "This configuration is optimized for containerized deployment",

  "host": "0.0.0.0",
  "port": 8080,
  "transport": "http",
  "log_level": "INFO",
  "log_file": "/var/log/mcp-proxy.log",

  "servers": [
    {
      "name": "filesystem",
      "transport": "stdio",
      "command": ["python", "-m", "mcp_server_filesystem", "/data"],
      "enabled": true,
      "timeout": 30,
      "namespace": "fs",
      "env": {
        "MCP_FILESYSTEM_ROOT": "/data"
      }
    },
    {
      "name": "database",
      "transport": "http",
      "url": "${DATABASE_MCP_URL:-http://database-mcp:8080}",
      "enabled": true,
      "timeout": 30,
      "namespace": "db",
      "env": {
        "DATABASE_URL": "${DATABASE_URL}"
      }
    },
    {
      "name": "external-api",
      "transport": "sse",
      "url": "${EXTERNAL_MCP_URL:-http://external-mcp:8080/sse}",
      "enabled": true,
      "timeout": 30,
      "namespace": "api",
      "env": {
        "API_KEY": "${EXTERNAL_API_KEY}"
      }
    }
  ],

  "auth": {
    "enabled": true,
    "jwt_secret": "${MCP_PROXY_JWT_SECRET}",
    "api_keys": []
  },

  "monitoring": {
    "enabled": true,
    "prometheus_enabled": true,
    "prometheus_port": 9090,
    "health_check_enabled": true,
    "health_check_path": "/health",
    "log_requests": true,
    "log_responses": false
  },

  "max_concurrent_requests": 200,
  "request_timeout": 60,
  "connection_pool_size": 20,

  "enable_caching": true,
  "cache_ttl": 600,
  "enable_request_batching": true
}