{
  "_comment": "MCP Proxy Server configuration for uv install deployment",
  "_note": "This configuration is optimized for installation via 'uv add mcp-proxy-server'",

  "host": "localhost",
  "port": 8080,
  "transport": "stdio",
  "log_level": "INFO",
  "log_file": null,

  "servers": [
    {
      "name": "playwright",
      "transport": "stdio",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true,
      "timeout": 30,
      "namespace": "playwright"
    },
    {
      "name": "obsidian",
      "transport": "stdio",
      "command": ["uvx", "mcp-obsidian"],
      "enabled": true,
      "timeout": 30,
      "namespace": "obsidian",
      "env": {
        "OBSIDIAN_API_KEY": "${OBSIDIAN_API_KEY}",
        "OBSIDIAN_HOST": "${OBSIDIAN_HOST:-127.0.0.1}",
        "OBSIDIAN_PORT": "${OBSIDIAN_PORT:-27124}"
      }
    }
  ],

  "auth": {
    "enabled": false,
    "jwt_secret": "${MCP_PROXY_JWT_SECRET}",
    "api_keys": []
  },

  "monitoring": {
    "enabled": true,
    "prometheus_enabled": false,
    "health_check_enabled": true,
    "health_check_path": "/health",
    "log_requests": true,
    "log_responses": false
  },

  "max_concurrent_requests": 100,
  "request_timeout": 60,
  "connection_pool_size": 10,

  "enable_caching": false,
  "cache_ttl": 300,
  "enable_request_batching": false
}